<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryAccent"
    android:orientation="vertical"
    android:padding="25sp"
    android:id="@+id/activity_find_products"
    tools:context=".FindProducts">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="3sp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10sp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/find_product"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="25sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragmentsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="3sp"
        app:cardUseCompatPadding="true"
        app:contentPadding="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            tools:context=".CreateProduct">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:queryHint="Wyszukaj produkt:"
                android:background="@color/colorSecondaryAccent"
                android:tooltipText="@string/comment_value"
                app:iconifiedByDefault="false">

            </androidx.appcompat.widget.SearchView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:text="@string/choose_category"
                android:textSize="23sp"
                android:textColor="@android:color/black"
                android:gravity="bottom" />

            <Spinner
                android:id="@+id/categories"
                android:layout_marginTop="5sp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorSecondaryAccent"
                android:layout_height="70sp"
                android:background="@color/colorPrimary"
                android:dropDownWidth="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/found_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20sp"
                android:clickable="true"
                tools:listitem="@layout/product" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>